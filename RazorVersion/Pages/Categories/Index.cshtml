@page
@model RazorVersion.Pages.Categories.IndexModel

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">Category List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="/categories/create" class="btn btn-primary">
				<i class="bi bi-plus-square"></i> Add Category
			</a>
		</div>

	</div>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Category Name 1
			</th>
			<th>
				Display Order
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.CategoryList.OrderBy(u => u.Name))
		{
			<tr>
				<td>
					@item.Name
				</td>
				<td>
					@item.DisplayOrder
				</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-page="/categories/edit" asp-route-id="@item.Id" class="btn btn-warning mx-2">
							<i class="bi bi-pencil-square"></i>
						</a>
						<a asp-page="/categories/delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
								<i class="bi bi-trash3-fill"></i>
						</a>
							
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
</div>
</div>
